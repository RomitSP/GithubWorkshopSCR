		crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
		integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
		integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
		crossorigin="anonymous"></script>
</head>

<body>
	<nav class="navbar navbar-default navbar-expand-lg navbar-light navbar-fixed-top">
			<div class="navbar-header d-flex col">
				<a class="navbar-brand" href="#">Travel<b>Experts</b></a>
				<button type="button" data-target="#navbarCollapse" data-toggle="collapse"
					class="navbar-toggle navbar-toggler ml-auto">
					<span class="navbar-toggler-icon"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<!-- Collection of nav links, forms, and other content for toggling -->
			<div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
				<ul class="nav navbar-nav">
					<li class="nav-item"><a href="home" class="nav-link">Home</a></li>
					<li class="nav-item active"><a href="vPackagesForm" class="nav-link">Vacation Packages</a></li>
					<li class="nav-item dropdown">
					<a data-toggle="dropdown" class="nav-link dropdown-toggle" href="#">Services <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><a href="#" class="dropdown-item">Hotel</a></li>
						<li><a href="#" class="dropdown-item">Car Rentals</a></li>
						<li><a href="#" class="dropdown-item">Cruise</a></li>
						<li><a href="#" class="dropdown-item">Tours</a></li>
						<li><a href="#" class="dropdown-item">Yacht/Boat Charters</a></li>
						<li><a href="#" class="dropdown-item">Attractions</a></li>
					</ul>
					</li>
					<li class="nav-item"><a href="register" class="nav-link">Login/Register</a></li>
					<li class="nav-item"><a href="contact" class="nav-link">Contact</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right ml-auto">
					<li class="navbar-form-wrapper">
					<form class="navbar-form form-inline navbar-right">
						<div class="input-group search-box">
							<input type="text" id="search" class="form-control" placeholder="Search Here...">
							<span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>
						</div>
					</form>
					</li>
					<li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-facebook"></i></a></li>
					<li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-twitter"></i></a></li>
					<li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-google-plus"></i></a></li>
					<li class="nav-item"><a href="#" class="nav-link"><i class="fa fa-pinterest-p"></i></a></li>
				</ul>
	
			</div>
		</nav>
				<form class="form form-inline justify-content-center" method="post" action="/vPackages_form" autocomplete="off">
					<div class="autocomplete">
						<label for="dateLeaving" class="orange">Date Leaving:</label>
						<input type="date" id="dateLeaving" name="dateLeaving" class="form-control " required="true" />
						
						<label for="dateReturning" class="orange">Date Returning:</label>
						<input type="date" id="dateReturning" name="dateReturning" class="form-control " required="true" />
						<input type="text" id="leavingFrom" name="leavingFrom" class="form-control " required="true"
							placeholder="Leaving From" />
						<select id="vacaPackage" name="vacaPackage" class="form-control " required="true"
							placeholder="Choose Your Package" />
						<option value="caribbean">Caribbean New Year</option>
						<option value="polynesia">Polynesian Paradise</option>
						<option value="asia">Asian Expedition</option>
						<option value="europe">European Vacation</option>
						</select>
						<input data-toggle="modal" data-target="#exampleModal" type="submit" class="btn btn-primary mb-2"
						value="Add Package"></input>
					</div>
					
				</form>
	

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
		aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Congrats! You are on your way to paradise!</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-primary" data-dismiss="modal">Start Your Journey!</button>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="ml-1" class="mt-0" class="px-2" class="p-3" class="col-sm-6" id="caribbeanCSS">
				<h2><%= packages[0].PkgName %></h2>
				<h5 class="black"> <%= packages[0].PkgDesc%></h5>
				<p class="orange">Start Date: <%= packages[0].PkgStartDate.toDateString() %></p>
				<p class="orange">End Date: <%= packages[0].PkgEndDate.toDateString() %></p><br />
				<button class="btn btn-primary mb-2" onclick="caribbeanVideo()">See Video</button><br />
				<h3 class="orange">Package Base Price:</h3>
				<h2 class="orange">$<%= packages[0].PkgBasePrice%></h2>
			</div>
			<br />
			<div class="ml-1" class="mt-0" class="px-2" class="p-3" class="col-sm-6" id="polyCSS">
				<h2><%= packages[1].PkgName %></h2>
				<h5 class="black"><%= packages[1].PkgDesc%></h5>
				<p class="orange">Start Date: <%= packages[1].PkgStartDate.toDateString() %></p>
				<p class="orange">End Date: <%= packages[1].PkgEndDate.toDateString() %></p><br />
				<button class="btn btn-primary mb-2" onclick="polyVideo()">See Video</button><br />
				<h3 class="orange">Package Base Price: </h3>
				<h2 class="orange">$<%= packages[1].PkgBasePrice%></h2>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="ml-1" class="mt-0" class="px-2" class="p-3" class="col-sm-6" id="asiaCSS">
				<h2><%= packages[2].PkgName %></h2>
				<h5 class="black"><%= packages[2].PkgDesc%></h5>
				<p class="orange">Start Date: <%= packages[2].PkgStartDate.toDateString() %></p>
				<p class="orange">End Date: <%= packages[2].PkgEndDate.toDateString() %></p><br />
				<button class="btn btn-primary mb-2" onclick="asiaVideo()">See Video</button><br />
				<h3 class="orange"> Package Base Price: </h3>
				<h2 class="orange">$<%= packages[2].PkgBasePrice%></h2>
			</div>
			<br />

			<div class="ml-1" class="mt-0" class="px-2" class="p-3" class="col-sm-6" id="europeCSS">

				<h2><%= packages[3].PkgName %></h2>
				<h5 class="black"><%= packages[3].PkgDesc%></h5>
				<p class="orange">Start Date: <%= packages[3].PkgStartDate.toDateString() %></p>
				<p class="orange">End Date: <%= packages[3].PkgEndDate.toDateString() %></p><br />
				<button class="btn btn-primary mb-2" onclick="europeVideo()">See Video</button><br />
				<h3 class="orange">Package Base Price: </h3>
				<h2 class="orange">$<%= packages[3].PkgBasePrice%></h2>
			</div>
		</div>
	</div>
	<div id="footer">
		Copyright &copy; 2019
	</div>
</body>

